<div class="container-fluid">
  <div class="co-cards">

    <div class="co-card" data-bs-toggle="modal" data-bs-target="#exampleModal">
      <i class="fa-solid fa-upload fa-5x"></i>
      <h3>Upload Rx</h3>
    </div>

    <div class="co-card">
      <%= link_to chatroom_path(@chatroom) do %>
      <i class="fa-solid fa-comment fa-5x"></i>
      <h3 class="mt-3">Talk to your pharmacist</h3>
    <% end %>
    </div>
  </div>

  <div class="co-cards">
    <%= simple_form_for(@order) do |f| %>
      <%= f.radio_button :delivery, 0 %>
