<%# <div data-controller="search-drugs"> %>
  <div class="container-fluid mt-5">
    <div class="form">
      <%= form_with url: pharmacies_path, method: :get, html: {data: {search_drugs_target: "form"}} do %>
        <%= text_field_tag :query,
          params[:query],
          class: "form-control",
          placeholder: "Find your drug",
          data: {search_drugs_target: "input", action: "keyup->search-drugs#autocomplete"}
        %>
        <div class="d-grid gap-2 mt-3">
          <%= submit_tag "Search", class: "btn btn-success" %>
        </div>
      <% end %>
    </div>
  </div>


  <%= render 'list', medicines: @medicines %>
</div>

<div class="mt-5" style="width: 100%; height: 600px;"
  data-controller="map"
  data-map-markers-value="<%= @markers.to_json %>"
  data-map-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>">
</div>
