<div data-search-drugs-target="list">
  <% if params[:query].present? %>
    <% if @medicines[0].present? %>
      <h2><%= "Pharmacies where #{params[:query]} is available" %></h2>
      <% @medicines.each do |medicine| %>
        <div class="card">
          <p><%= medicine.name %></p>
          <p><%= medicine.price %> MUR</p>
          <% if medicine.prescription == true %>
            <p><%= "Prescription needed" %></p>
          <% else %>
            <p><%= "No prescription needed" %></p>
          <% end %>
        </div>
      <% end %>

      <p>-------------------------------------</p>

      <% @stocks.each do |stock| %>
        <li><%= link_to stock.pharmacy.name, pharmacy_path(stock.pharmacy) %></li>
      <% end %>

    <% else %>
      <p><%= "No results" %></p>
    <% end %>
  <% else %>
    <p><%= "No results" %></p>
  <% end %>
</div>
